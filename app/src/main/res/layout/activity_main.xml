<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.monsoonblessing.kevinfaust.ruhacks.MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="License Plate"
        android:textColor="@color/md_white_1000"
        android:textSize="17sp"/>

    <ImageView
        android:id="@+id/license_image"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/placeholder"/>

    <ImageButton
        android:id="@+id/process_license_plate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="#00000000"
        android:paddingTop="15dp"
        android:src="@drawable/camera"
        android:text="Process License Plate"/>

    <TextView
        android:id="@+id/result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:text="Result:"
        android:textColor="@color/md_white_1000"
        android:textSize="20sp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/credit_card_prompt_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/creditCardText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:maxLines="1"
                android:hint="Credit card number"
                android:inputType="number"
                android:textColor="@color/md_white_1000"
                android:textColorHint="@color/md_white_1000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:maxLength="5"
                    android:id="@+id/expiryDateText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="mm/yy"
                    android:textColor="@color/md_white_1000"
                    android:textColorHint="@color/md_white_1000"/>

                <EditText
                    android:maxLength="3"
                    android:id="@+id/CVVText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="CVV"
                    android:inputType="number"
                    android:textColor="@color/md_white_1000"
                    android:textColorHint="@color/md_white_1000"/>


            </LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/verifyCreditCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/round_button"
            android:text="verify"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/time_spent_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="15dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/timeSpent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="textPersonName"
            android:maxLines="10"
            android:padding="5dp"
            android:textColor="@color/md_white_1000"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/costCharged"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="textPersonName"
            android:maxLines="10"
            android:padding="5dp"
            android:textColor="@color/md_white_1000"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/lot_availability_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:text="Lot availability:"
            android:textColor="@color/md_white_1000"/>

    </LinearLayout>

</LinearLayout>
